<?xml version='1.0' encoding='utf-8'?>
<widget android-versionCode="1" id="com.enguniararas.computachat" ios-CFBundleVersion="1" version="1.3.1" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <feature name="Device">
        <param name="android-package" value="org.apache.cordova.device.Device" />
    </feature>
    <name>ComputaChat</name>
    <description>
     ComputaChat App
    </description>
    <author email="gdragoni@luxfacta.com" href="https://www.luxfacta.com/">
      Eng Computação
    </author>
    <hook src="scripts/appBeforeBuild.js" type="before_build" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <content src="index.html" />
    <allow-intent href="market:*" />
    <preference name="loglevel" value="DEBUG" />
    <preference name="permissions" value="none" />
    <preference name="orientation" value="portrait" />
    <preference name="target-device" value="handset" />
    <preference name="detect-data-types" value="true" />
    <preference name="android-minSdkVersion" value="16" />
    <preference name="android-installLocation" value="preferExternal" />
    <preference name="android-manifest/@android:installLocation" value="preferExternal" />
    <preference name="AndroidPersistentFileLocation" value="Compatibility" />
    <preference name="ShowSplashScreenSpinner" value="false" />
    <preference name="SplashScreenDelay" value="5000" />
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="android-manifest/application/activity/@android:theme" value="@android:style/Theme.Holo.Light" />
    <preference name="disallowOverscroll" value="true" />
    <preference name="webviewbounce" value="false" />
</widget>
